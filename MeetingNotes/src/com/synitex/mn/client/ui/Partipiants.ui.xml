<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {	
		  border-left: 1px solid #999; 
		}
		.lbl {
		  font-weight: bold;
		  font-size: 12px;
		  text-decoration: underline;	
		  padding-top: 3px;
		  padding-left: 10px;
		  color: white;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" styleName="{style.mainPanel}">
	   <g:north size="23">
	       <g:HorizontalPanel styleName="ui-gradient" width="100%" height="100%">
	           <g:Label styleName="{style.lbl}">Paticipiants:</g:Label>
	       </g:HorizontalPanel>
	   </g:north>
	   <g:center>
	       <g:ScrollPanel styleName="ui-panel-background">
	       
	       </g:ScrollPanel>
	   </g:center>
	</g:DockLayoutPanel>
	
</ui:UiBinder> 